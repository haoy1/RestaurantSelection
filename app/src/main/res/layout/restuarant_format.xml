<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:layout_margin="5dp">

    <TextView android:id="@+id/tvRestaurantName"
        android:text="Test Name"
        android:textSize="20dp"
        android:layout_columnSpan="2"/>

    <TextView android:id="@+id/tvCategory"
        android:text="test category"/>

    <TextView android:id="@+id/tvAddress"
        android:text="Test Address"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="2"/>

    <TextView android:id="@+id/tvOpenTime"
        android:text="Opens: "
        android:layout_column="0"
        android:layout_row="2"/>

    <TextView android:id="@+id/tvCloseTime"
        android:text="Closes: "/>

    <TextView android:id="@+id/tvPhoneNumber"
        android:text="test phoneNumber"/>
</GridLayout>